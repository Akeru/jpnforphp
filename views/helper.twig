{% extends 'layout.twig' %}
{% block body %}
    <div class="container">
        {% if error is defined %}
            <p>Error : {{ error }}</p>
        {% endif %}
        <h3>Helper demos</h3>

        <p>&nbsp;</p>

        <div class="well">
            <form class="form-horizontal" method="post" action="/helper">
                <div class="form-group">
                    <label for="string" class="col-sm-2 control-label">String</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="string" name="string" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-1">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                    <div class="col-sm-1">
                        <button class="btn btn-info" onclick="fillForm('string','素晴らしいです')">素晴らしいです</button>
                    </div>
                </div>
            </form>
        </div>
        <p>&nbsp;</p>
        <a href="/">Back</a>
    </div>
{% endblock %}
