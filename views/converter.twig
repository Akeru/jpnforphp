{% extends 'layout.twig' %}
{% block body %}
    <div class="container">
        {% if error is defined %}
            <p>Error : {{ error }}</p>
        {% endif %}
        <h3>Converter demos</h3>

        <p>&nbsp;</p>

        <div class="well">
            <form class="form-horizontal" method="post" action="/converter/numeral/japanese">
                <div class="form-group">
                    <label for="westernnumeral" class="col-sm-3 control-label">Western numeral to Japanese</label>

                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="westernnumeral" name="numeral" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="well">
            <form class="form-horizontal" method="post" action="/converter/year/japanese">
                <div class="form-group">
                    <label for="westernyear" class="col-sm-3 control-label">Western year to Japanese</label>

                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="westernyear" name="year" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="well">
            <form class="form-horizontal" method="post" action="/converter/year/western">
                <div class="form-group">
                    <label for="japaneseera" class="col-sm-3 control-label">Japanese year to Western</label>

                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="japaneseera" name="year" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-1">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                    <div class="col-sm-1">
                        <button class="btn btn-info" onclick="fillForm('japaneseera','Shōwa 5')">Shōwa 5</button>
                    </div>
                </div>
            </form>
        </div>
        <p>&nbsp;</p>
        <a href="/">Back</a>
    </div>
{% endblock %}
